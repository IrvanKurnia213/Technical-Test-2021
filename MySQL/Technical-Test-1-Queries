WITH base_table AS 
(
SELECT 
    c.name AS Category_Name,
    p.name AS Product_Name,
    SUM(s.order_value) AS Total_Sales_Value,
    ROW_NUMBER() OVER (PARTITION BY c.name ORDER BY SUM(Order_Value)) AS Row_Count
FROM product p
    LEFT JOIN category c ON p.category_id = c.id
    LEFT JOIN sales_order s ON p.id = s.product_id
WHERE MONTH(s.created_at) = 10 AND s.trx_state = 'Delivered'
GROUP BY 1, 2
ORDER BY 1,2,3 DESC
)
SELECT 
    Category_Name,
    Product_Name,
    Total_Sales_Value
FROM base_table
WHERE Row_Count < 4